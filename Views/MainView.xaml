<UserControl x:Class="SC3_pnach_editor.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Text="clr-namespace:System.Windows.Documents;assembly=PresentationFramework"
             xmlns:viewmodels="clr-namespace:SC3_pnach_editor.ViewModels"
             xmlns:local="clr-namespace:SC3_pnach_editor.Views"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">


    <Grid Height="1080" Width="1920">

        <Grid.Background>
            <ImageBrush ImageSource="/Resources/background.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="960*"/>
            <RowDefinition Height="960*"/>
            <RowDefinition Height="960*"/>
            <RowDefinition Height="960*"/>
            <RowDefinition Height="960*"/>
            <RowDefinition Height="960*"/>
            <RowDefinition Height="960*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="540*"/>
        </Grid.ColumnDefinitions>

        <MediaElement x:Name="customSound" LoadedBehavior="Play"/>


        <!--FilePath-->
        <TextBox x:Name="FilePath"
                 Grid.Column="6"
                 Grid.Row="0"
                 FontSize="22"
                 Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="200"
                 Margin="5,20,5,100"/>
        <!--versionText-->
        <TextBlock Grid.Row="0"
                   Grid.Column="6"
                   Foreground="Red" 
                   FontSize="28"
                   FontWeight="Bold"
                   Text="Codes File Path"
                   Margin="44,55,0,40"/>
        <!--Save Path-->
        <Button Grid.Row="0"
                Grid.Column="6"
                x:Name="SavePath"
                Background="#AAAAAA"
                FontFamily="Times New Roman"
                FontSize="34"
                FontStyle="Italic"
                FontWeight="Bold"
                Margin="40,100,40,10"
                Click="SavePath_Click">
            Save Path
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="40"/>
                </Style>
            </Button.Resources>
        </Button>


        <!--InputValueCode-->
        <TextBox x:Name="CodeFileName"
                 Grid.Column="6"
                 Grid.Row="1"
                 MaxLength="8"
                 FontSize="22"
                 Text="{Binding CRC_Name, UpdateSourceTrigger=PropertyChanged}"
                 Margin="10,15,0,105"/>

        <!--Change Code File Name-->
        <Button Grid.Row="1"
                Grid.Column="6"
                x:Name="ChangeCodeFileName"
                Background="DarkSlateGray"
                FontFamily="Times New Roman"
                FontSize="37"
                Margin="0,60,0,0"
                Click="ChangeCodeFileName_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" Text="Save CRC (fileName)" />
            </Button.Content>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="40"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Version-->
        <TextBlock Grid.Row="6"
                   Grid.Column="6"
                   Foreground="Gold" 
                   FontSize="34"
                   FontWeight="Bold"
                   Text="{Binding EditorVersion, UpdateSourceTrigger=PropertyChanged}"
                   Margin="45,5,0,0"/>
        <!--Discord-->
        <TextBlock
            Grid.Row="6"
            Grid.Column="6"
            Margin="25,75,0,0"
            FontSize="35">
        <Text:Hyperlink
            NavigateUri="{Binding DiscordServer, UpdateSourceTrigger=PropertyChanged}"
            RequestNavigate="Hyperlink_RequestNavigate">
            Discord Server
        </Text:Hyperlink>
        </TextBlock>


        <!--BonusCharacters-->
        <Border Grid.Row="0"
                Grid.Column="0"
                Name="bonusChars"
                BorderBrush="Blue"
                BorderThickness="0"
                Margin="20,0,120,0">

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding BonusCharacters}"
                          Width="20"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="0"
                   FontSize="38"
                   Name="bonusCharsT"
                   TextWrapping="WrapWithOverflow"
                   Foreground="Yellow"
                   Text="Extra Bonus Characters"
                   Margin="140,44,153,40"
                   Grid.ColumnSpan="3"/>
        <!--UseSelectedCharacters-->
        <Border Grid.Row="0"
                Grid.Column="4"
                Name="setChars"
                BorderBrush="Blue"
                BorderThickness="0"
                Margin="20,0,120,0">

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding UseSetCharacters}"
                          Width="20"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="0"
                   Grid.Column="4"
                   FontSize="38"
                   Name="setCharsT"
                   TextWrapping="WrapWithOverflow"
                   Foreground="Yellow"
                   Text="Use Set Characters"
                   Margin="140,44,153,40"
                   Grid.ColumnSpan="3"/>


        <!--WeaponEffectP1-->
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Foreground="#FFAAAA" 
                   FontSize="34"
                   FontWeight="Bold"
                   Text="Weapon Effects"
                   Margin="10,0,274,100" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="WeaponEffectComboP1"
                  Grid.Column="0"
                  Grid.Row="2"
                  FontSize="22"
                  Margin="0,0,0,100"/>

        <!--WeaponSpecialPowerP1-->
        <TextBlock Grid.Row="3"
                   Grid.Column="1"
                   Foreground="#FFAAAA" 
                   FontSize="34"
                   FontWeight="Bold"
                   Text="Weapon Special Power"
                   Margin="10,0,128,77" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="WeaponSpecialPowerComboP1"
                  Grid.Column="0"
                  Grid.Row="3"
                  FontSize="22"
                  Margin="10,0,0,100"/>

        <!--GuardianForceP1-->
        <Border Grid.Row="4"
                Grid.Column="0"
                Name="guardP1"
                BorderBrush="Blue"
                BorderThickness="0"
                Margin="160,0,0,0">

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding GuardianForceP1}"
                          Width="20"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="4"
                   Grid.Column="1"
                   FontSize="38"
                   Name="guardP1T"
                   TextWrapping="WrapWithOverflow"
                   Foreground="LightGreen"
                   Text="Guardian Force"
                   Margin="10,44,4,40"/>

        <!--SlipperyFieldP1-->
        <Border Grid.Row="5"
                Grid.Column="0"
                Name="slipperyP1"
                BorderBrush="Blue"
                BorderThickness="0"
                Margin="160,0,0,0">

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding SlipperyFieldP1}"
                          Width="20"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="5"
                   Grid.Column="1"
                   FontSize="38"
                   Name="slipperyP1T"
                   TextWrapping="WrapWithOverflow"
                   Foreground="LightGreen"
                   Text="Slippery Field"
                   Margin="10,44,4,40"/>








        <!--WeaponEffectP2-->
        <TextBlock Grid.Row="2"
                   Grid.Column="4"
                   Foreground="#FFAAAA" 
                   FontSize="34"
                   FontWeight="Bold"
                   Text="Weapon Effects"
                   Margin="10,0,0,100"/>
        <ComboBox x:Name="WeaponEffectComboP2"
                  Grid.Column="3"
                  Grid.Row="2"
                  FontSize="22"
                  Margin="0,0,0,100"/>

        <!--WeaponSpecialPowerP2-->
        <TextBlock Grid.Row="3"
                   Grid.Column="4"
                   Foreground="#FFAAAA" 
                   FontSize="34"
                   FontWeight="Bold"
                   Text="Weapon Special Power"
                   Margin="10,0,155,100" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="WeaponSpecialPowerComboP2"
                  Grid.Column="3"
                  Grid.Row="3"
                  FontSize="22"
                  Margin="10,0,0,100"/>

        <!--GuardianForceP2-->
        <Border Grid.Row="4"
                Grid.Column="3"
                Name="guardP2"
                BorderBrush="Blue"
                BorderThickness="0"
                Margin="160,0,0,0">

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding GuardianForceP2}"
                          Width="20"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="4"
                   Grid.Column="3"
                   FontSize="38"
                   Name="guardP2T"
                   TextWrapping="WrapWithOverflow"
                   Foreground="LightGreen"
                   Text="Guardian Force"
                   Margin="270,44,0,40"
                   Grid.ColumnSpan="2"/>

        <!--SlipperyFieldP2-->
        <Border Grid.Row="5"
                Grid.Column="3"
                Name="slipperyP2"
                BorderBrush="Blue"
                BorderThickness="0"
                Margin="160,0,0,0">

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding SlipperyFieldP2}"
                          Width="20"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="5"
                   Grid.Column="4"
                   FontSize="38"
                   Name="slipperyP2T"
                   TextWrapping="WrapWithOverflow"
                   Foreground="LightGreen"
                   Text="Slippery Field"
                   Margin="10,44,4,40"/>

        <!--UltimateWeaponsPack-->
        <Border
         Grid.Column="0"
         Name="ultimateWeapons"
         BorderBrush="Blue"
         BorderThickness="0"
         Margin="20,154,120,154" Grid.RowSpan="3">

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                   Foreground="Black"
                   IsChecked="{Binding UltimateWeapons}"
                   Width="20"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="1"
            Grid.Column="0"
            FontSize="38"
            Name="ultWeapons"
            TextWrapping="WrapWithOverflow"
            Foreground="Yellow"
            Text="Ultimate Weapons"
            Margin="135,44,30,40" Grid.ColumnSpan="2"/>



        <!--ChroniclesOfTheSwordCharacter-->
        <TextBlock x:Name="CharText"
                   Grid.Row="0"
                   Grid.Column="4"
                   Foreground="#FFAAAA" 
                   FontSize="34"
                   FontWeight="Bold"
                   Text="Character"
                   Margin="110,0,155,100" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="CharacterChronicles"
                  Grid.Column="5"
                  Grid.Row="0"
                  FontSize="30"
                  Margin="10,0,80,100"
                  MaxDropDownHeight="1020"
                  SelectionChanged="CharacterChronicles_SelectionChanged"/>
        <ComboBox x:Name="CharacterChroniclesA"
                  Grid.Column="5"
                  Grid.Row="0"
                  FontSize="30"
                  Margin="10,60,80,50"
                  MaxDropDownHeight="760"/>
        <ComboBox x:Name="CharacterChronicles2"
                  Grid.Column="5"
                  Grid.Row="0"
                  Grid.RowSpan="2"
                  FontSize="30"
                  Margin="10,120,80,130"
                  MaxDropDownHeight="890"
                  SelectionChanged="CharacterChronicles_SelectionChanged"/>
        <ComboBox x:Name="CharacterChroniclesB"
                  Grid.Column="5"
                  Grid.Row="0"
                  Grid.RowSpan="2"
                  FontSize="30"
                  Margin="10,180,80,80"
                  MaxDropDownHeight="760"/>
        <Image x:Name="PreviewImg"
               Source="{Binding CharPreview}"
               Grid.Column="4"
               Grid.RowSpan="2"
               Margin="100,-77,0,0"
               Height="150"
               VerticalAlignment="Center"/>
        <Button Grid.Row="0"
                Grid.Column="5"
                x:Name="CharInfo"
                Background="#FFFF00"
                FontFamily="Times New Roman"
                FontSize="26"
                FontWeight="Bold"
                Margin="210,15,20,97"
                Click="Char_Info">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" Text="i" />
            </Button.Content>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="40"/>
                </Style>
            </Button.Resources>
        </Button>



        <!--OpponentControl-->
        <TextBlock Grid.Row="4"
                   Grid.Column="6"
                   Foreground="#FFAAAA" 
                   FontSize="29"
                   FontWeight="Bold"
                   Text="Opponent Control"
                   Margin="10,50,4,50"/>
        <ComboBox x:Name="OpponentControlCombo"
                  Grid.Column="6"
                  Grid.Row="4"
                  FontSize="30"
                  Margin="10,100,10,0"
                  MaxDropDownHeight="270"/>

        <!--Activate Codes-->
        <Button Grid.Row="5"
                Grid.Column="2"
                x:Name="PnachButton"
                Background="#A00000"
                FontFamily="Century Gothic"
                FontSize="35"
                FontStyle="Italic"
                FontWeight="Bold"
                Margin="10,20,10,10"
                Click="ActivateCodes_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" Text="Activate Codes" />
            </Button.Content>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Deactivate Codes-->
        <Button Grid.Row="6"
                Grid.Column="2"
                x:Name="PnachButtonCancel"
                Background="#0000A0"
                Foreground="#BBBBBB" 
                FontFamily="Century Gothic"
                FontSize="35"
                FontStyle="Italic"
                FontWeight="Bold"
                Margin="10,20,10,10"
                Click="DeactivateCodes_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" Text="Clear Codes" />
            </Button.Content>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>


        <!--Active Code-->
        <!--<TextBlock Grid.Row="6"
                   Grid.Column="2"
                   FontFamily="Palatino Linotype"
                   Foreground="Red" 
                   FontSize="36"
                   FontWeight="Bold"
                   Text="Active Code"
                   Margin="35,10,0,0"/>-->

        <TextBlock Grid.Row="6"
                   Grid.Column="3"
                   x:Name="statusText"
                   FontSize="36"
                   Foreground="White" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>

        <!--Switch to Weapons Effects Edits Page-->
        <Button Grid.Row="3"
                Grid.Column="6"
                x:Name="WeaponsEffectsPage"
                Foreground="#181818"
                FontFamily="Palatino Linotype"
                FontSize="34"
                FontStyle="Italic"
                FontWeight="Bold"
                Click="GoToWeaponsEffectsPage_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Edit Weapon Effects" />
            </Button.Content>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#55165E" Offset="0" />
                    <GradientStop Color="#661E7E" Offset="0.25" />
                    <GradientStop Color="#77269E" Offset="0.5" />
                    <GradientStop Color="#661E7E" Offset="0.75" />
                    <GradientStop Color="#55165E" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>


        <!--Switch to Characters Page-->
        <Button Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                x:Name="CharactersPage"
                Foreground="#181818"
                FontFamily="Trebuchet MS"
                FontSize="46"
                FontStyle="Italic"
                FontWeight="Bold"
                Margin="70,50,40,60"
                Click="GoToCharactersPage_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Character Select Page" />
            </Button.Content>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#115500" Offset="0" />
                    <GradientStop Color="#227700" Offset="0.25" />
                    <GradientStop Color="#339900" Offset="0.5" />
                    <GradientStop Color="#227700" Offset="0.75" />
                    <GradientStop Color="#115500" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Graphics-->
        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   FontSize="34"
                   Name="copyFromText"
                   TextWrapping="WrapWithOverflow"
                   Foreground="red"
                   Text="Gfx Copy From:"
                   Margin="30,10,5,100"/>
        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   FontSize="34"
                   Name="copyToText"
                   TextWrapping="WrapWithOverflow"
                   Foreground="red"
                   Text="Gfx Copy To:"
                   Margin="72,90,5,20"/>
        <TextBox x:Name="GfxCopyFrom"
                 Grid.Column="1"
                 Grid.Row="6"
                 FontSize="22"
                 Text="{Binding GfxCopyFrom, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="200"
                 Margin="5,20,5,100"/>
        <TextBox x:Name="GfxCopyTo"
                 Grid.Column="1"
                 Grid.Row="6"
                 FontSize="22"
                 Text="{Binding GfxCopyTo, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="200"
                 Margin="5,100,5,20"/>



        <!--Graphics-->
        <TextBlock Grid.Row="6"
                   Grid.Column="4"
                   FontSize="38"
                   Name="p1SpeedT"
                   TextWrapping="WrapWithOverflow"
                   Foreground="LightGreen"
                   Text="P1 Speed"
                   Margin="111,14,0,83"/>
        <TextBlock Grid.Row="6"
                   Grid.Column="4"
                   FontSize="38"
                   Name="p2SpeedT"
                   TextWrapping="WrapWithOverflow"
                   Foreground="LightGreen"
                   Text="P2 Speed"
                   Margin="111,82,0,10"/>
        <Slider Grid.Row="6"
            Grid.Column="5"
            Name="slider_P1spd"
            Minimum="1"
            Maximum="7"
            Value="4"
            TickFrequency="1"
            IsSnapToTickEnabled="True"
            Margin="14,32,18,94"/>
        <Slider Grid.Row="6"
            Grid.Column="5"
            Name="slider_P2spd"
            Minimum="1"
            Maximum="7"
            Value="4"
            TickFrequency="1"
            IsSnapToTickEnabled="True"
            Margin="14,103,18,23"/>
        


    </Grid>


</UserControl>
