           Foreground="LightGreen"
           Text="Sophitia - Costume 1 [Brown]"
           Tag="SophitiaBrown"
           MouseEnter="SkinPreview"/>

        
        
        
        <!--Costume Preview-->
        <Image Source="{Binding SkinPreview}"
               Grid.Row="4"
               Grid.Column="2"
               Margin="50,10,60,50"
               Height="660" Grid.RowSpan="12"/>


        <!--Switch to Main Page-->
        <Button Grid.Row="8"
                Grid.Column="3"
                Grid.RowSpan="2"
                x:Name="MainPage"
                Foreground="#181818"
                FontFamily="Palatino Linotype"
                FontSize="34"
                FontStyle="Italic"
                FontWeight="Bold"
                Click="GoToMainPage_Click">
            <Button.Content>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Return to Main Menu" />
            </Button.Content>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#55165E" Offset="0" />
                    <GradientStop Color="#661E7E" Offset="0.25" />
                    <GradientStop Color="#77269E" Offset="0.5" />
                    <GradientStop Color="#661E7E" Offset="0.75" />
                    <GradientStop Color="#55165E" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>


        <!--ErrorMessage-->
        <TextBlock Grid.Row="16"
           Grid.Column="2"
           Name="ErrorText"
           FontSize="26"
           TextWrapping="WrapWithOverflow"
           Foreground="Red"
           Text="{Binding ErrorTextMessage, UpdateSourceTrigger=PropertyChanged}"
           Margin="40,0,40,0"/>

    </Grid>


</UserControl>
