           MouseEnter="SkinPreview"/>

        <!--SophitiaBrownSkin-->
        <Border Grid.Row="7"
                Grid.Column="0"
                Name="SophitiaBrownBox"
                BorderBrush="Blue"
                BorderThickness="0">
            <Border.RenderTransform>
                <TransformGroup>
                    <SkewTransform/>
