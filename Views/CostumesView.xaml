<UserControl x:Class="SC3_pnach_editor.Views.CostumesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SC3_pnach_editor.Views" xmlns:viewmodels="clr-namespace:SC3_pnach_editor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">



    <Grid Height="1080" Width="1920">

        <Grid.Background>
            <ImageBrush ImageSource="/Resources/backgroundX.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="340*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>


        <MediaElement x:Name="customSound" LoadedBehavior="Play"/>

        <!--NightTerrorGraySkin--> 
        <Border Grid.Row="0"
                Grid.Column="0"
                Name="NightTerrorGrayBox"
                BorderBrush="Blue"
                BorderThickness="0">
            <Border.RenderTransform>
                <TransformGroup>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding NightTerrorSkin}"
                          Width="20"
                          Checked="NightTerrorGraySkin_Checked"
                          Unchecked="NightTerrorGraySkin_Unchecked"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="0"
           Grid.Column="1"
           Name="NightTerrorGrayText"
           FontSize="30"
           TextWrapping="WrapWithOverflow"
           Foreground="LightGreen"
           Text="Night Terror - Costume 1 [Blue Skin]"
           Tag="NightTerrorGray"
           MouseEnter="SkinPreview"/>

        <!--TakiStockingsSkin-->
        <Border Grid.Row="1"
                Grid.Column="0"
                Name="TakiStockingsBox"
                BorderBrush="Blue"
                BorderThickness="0">
            <Border.RenderTransform>
                <TransformGroup>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>

            <Viewbox  ToolTip="">
                <CheckBox Content="Automat"
                          Foreground="Black"
                          IsChecked="{Binding TakiSkin}"
                          Width="20"
                          Checked="TakiStockingsSkin_Checked"
                          Unchecked="TakiStockingsSkin_Unchecked"/>
            </Viewbox>
        </Border>
        <TextBlock Grid.Row="1"
           Grid.Column="1"
           Name="TakiStockingsText"
           FontSize="30"
           TextWrapping="WrapWithOverflow"
           Foreground="LightGreen"
           Text="Taki - Costume 1 [with stockings]"
           Tag="TakiStockings"
           MouseEnter="SkinPreview"/>

