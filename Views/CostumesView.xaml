                <TransformGroup>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>

            <Viewbox  ToolTip="">
                <CheckBox x:Name="NightTerrorCheckBox"
                          Content="Automat"
                          Foreground="Black"
                          Width="20"
                          Checked="NightTerrorGraySkin_Checked"
                          Unchecked="NightTerrorGraySkin_Unchecked"/>
